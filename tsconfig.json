{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": false,
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@tests/*": ["./tests/*"],
      "@utils/*": ["./utils/*"]
    }
  },
  "include": [
    "tests/**/*",
    "utils/**/*",
    "e2e/**/*",
    "tests-examples/**/*",
    "playwright.config.ts",
    "global-setup.ts",
    "global-teardown.ts"
  ],
  "exclude": [
    "node_modules",
    "test-results",
    "playwright-report"
  ]
} 